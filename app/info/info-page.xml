<Page style="{{ page_theme }}" loaded="pageLoaded" class="page_theme" xmlns:nsDrawer="nativescript-ui-sidedrawer" xmlns="http://www.nativescript.org/tns.xsd" xmlns:lv="nativescript-ui-listview" xmlns:f="nativescript-fresco">

	<ActionBar class="action-bar">
		<Label text="Article" class="action-bar-label" />
	</ActionBar>

	<nsDrawer:RadSideDrawer id="sideDrawer">
        <nsDrawer:RadSideDrawer.drawerContent>
            <StackLayout backgroundColor="gray">
                <StackLayout height="56" style="text-align: center; vertical-align: center;">
                    <Label text="Navigation Menu"/>
                </StackLayout>
                <ScrollView>
                    <StackLayout>
						<Button text="Latest Stories" tap="gotoHome"
                            padding="10"
                            backgroundColor="lightgray"/>
                        <Button text="Search" tap="gotoSearch"
                            padding="10"
                            backgroundColor="lightgray"/> 
						<Button text="Preferences" tap="gotoPrefs"
						padding="10"
						backgroundColor="lightgray"/> 
						<Button text="Info" tap="gotoInfo"
						padding="10"
						backgroundColor="lightgray"/> 
                    </StackLayout>
                </ScrollView>
            </StackLayout>
    </nsDrawer:RadSideDrawer.drawerContent>
	<nsDrawer:RadSideDrawer.mainContent>
		<GridLayout class="page-content" rows="auto,auto,auto,*">
            <Label class="info-text text" text="Assignment 3" row="0"></Label>
            <Label class="info-text text" text="Brooke Dobbins" row="1"></Label>
            <Label class="info-text text" text="CMSC 5233" row="2"></Label>
            <Label class="info-text text" text="Spring 2018" row="3"></Label>
        </GridLayout>
	</nsDrawer:RadSideDrawer.mainContent>
	</nsDrawer:RadSideDrawer>
</Page>