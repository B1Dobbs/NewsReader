<Page loaded="pageLoaded" class="page" xmlns:nsDrawer="nativescript-ui-sidedrawer" xmlns="http://www.nativescript.org/tns.xsd" xmlns:lv="nativescript-ui-listview" xmlns:f="nativescript-fresco">

	<ActionBar class="action-bar">
		<Label text="Preferences" class="action-bar-label" />
	</ActionBar>

	<nsDrawer:RadSideDrawer id="sideDrawer">
        <nsDrawer:RadSideDrawer.drawerContent>
            <StackLayout backgroundColor="gray">
                <StackLayout height="56" style="text-align: center; vertical-align: center;">
                    <Label text="Navigation Menu"/>
                </StackLayout>
                <ScrollView>
                    <StackLayout>
						<Button text="Latest Stories" tap="gotoHome"
                            padding="10"
                            backgroundColor="lightgray"/>
                        <Button text="Search" tap="gotoSearch"
                            padding="10"
                            backgroundColor="lightgray"/> 
						<Button text="Preferences" 
						padding="10"
						backgroundColor="lightgray"/> 
                    </StackLayout>
                </ScrollView>
            </StackLayout>
    </nsDrawer:RadSideDrawer.drawerContent>
	<nsDrawer:RadSideDrawer.mainContent>
		<GridLayout rows="auto,auto" columns="auto,*" class="m-5">
			<Label class="h3 m-15" [text]="firstSwitchState" textWrap="true" row="0" col="0"></Label>
			<Switch class="m-15" checked="false" (checkedChange)="onFirstChecked($event)" row="0" col="1"></Switch>
			<Label class="h3 m-15" [text]="secondSwitchState" textWrap="true" row="1" col="0"></Label>
			<Switch class="m-15" checked="true" (checkedChange)="onSecondChecked($event)" row="1" col="1"></Switch>
		</GridLayout>
	</nsDrawer:RadSideDrawer.mainContent>
	</nsDrawer:RadSideDrawer>
</Page>